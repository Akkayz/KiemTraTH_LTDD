<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF1616"
            android:gravity="center"
            android:text="Tính tiền bán hàng"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_hovaten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nước uống: "
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_soLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="51dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn giá: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_donGia"
                android:layout_width="match_parent"
                android:text="0"
                android:layout_height="wrap_content"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuế:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_thue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="70dp"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thành tiền: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edt_thanhTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="70dp"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tinhTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tính tiền"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_tiepTuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đóng"
                android:textSize="20dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#FF7B16"
            android:gravity="center"
            android:text="Thông tin chi tiết"
            android:textColor="#1B5E20"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_thongTinChiTiet"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="textMultiLine" />
    </LinearLayout>

</RelativeLayout>